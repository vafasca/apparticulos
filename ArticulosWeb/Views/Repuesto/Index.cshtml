@model IEnumerable<ArticulosWeb.Models.Repuesto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoIdAutoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaIdCategoriaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventarioIdAppInventarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoIdAutoNavigation.AutoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaIdCategoriaNavigation.CategoriaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventarioIdAppInventarioNavigation.InventarioId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepuestoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RepuestoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RepuestoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

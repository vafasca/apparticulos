@model ArticulosWeb.Models.Galeria

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Galeria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GaleriaId" />
            <div class="form-group">
                <label asp-for="NombreFoto" class="control-label"></label>
                <input asp-for="NombreFoto" class="form-control" />
                <span asp-validation-for="NombreFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" type="file" name="file" id="file" multiple />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionFoto" class="control-label"></label>
                <input asp-for="DescripcionFoto" class="form-control" />
                <span asp-validation-for="DescripcionFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="RepuestoIdRepuesto" class="control-label"></label>*@
                <label for="male">Repuesto</label>
                <select asp-for="RepuestoIdRepuesto" class="form-control" asp-items="ViewBag.RepuestoIdRepuesto"></select>
                <span asp-validation-for="RepuestoIdRepuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
